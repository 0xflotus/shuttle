$(document).ready(function() {
  var blankString = $('input[name=blank_string]');
  var copy_field = $('#translation_copy');

  if (copy_field.val().match(/^\s*$/))
    blankString.checked = true;

  blankString.change(function() {
    if (blankString[0].checked) $('#translation_copy').val('');
  });

  copy_field.keyup(function() {
    blankString[0].checked = copy_field.val().match(/^\s*$/);
    return true;
  });

  $('#copy-button').click(function() { copy_field.val("<%= escape_javascript @translation.source_copy %>"); return false; });
});
